<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gemini_summary_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000"  
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    android:visibility="gone">

    <!-- Centered, large panel for better readability on TV -->
    <LinearLayout
        android:id="@+id/gemini_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="48dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_gemini_panel"
            android:orientation="vertical"
            android:elevation="8dp"
            android:padding="24dp">

            <!-- Header row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/gemini_progress"
                    style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/gemini_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="ðŸ§  AI Summary" />

                <!-- Placeholder for potential future actions -->
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#4486C5FF" />

            <ScrollView
                android:id="@+id/gemini_scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fadeScrollbars="false">

                <TextView
                    android:id="@+id/gemini_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:lineSpacingExtra="6dp"
                    android:breakStrategy="balanced"
                    android:fontFamily="sans-serif-medium" />
            </ScrollView>

            <!-- Footer row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/gemini_hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#B3FFFFFF"
                    android:textSize="14sp"
                    android:text="â–²/â–¼ Scroll   â€¢   â—€/â–¶/Back Close" />

                <Button
                    android:id="@+id/gemini_email_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‡ª Push to device"
                    android:textAllCaps="false"
                    android:minWidth="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <!-- Footer metadata line: AI Provider / Model / Time / Tokens -->
            <TextView
                android:id="@+id/gemini_footer_meta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#99FFFFFF"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused: subtle glow + accent stroke -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Outer glow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#3386C5FF" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <!-- Inner button -->
            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#26354460" />
                    <stroke android:width="2dp" android:color="#86C5FF" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default: subtle accent border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A354460" />
            <stroke android:width="1dp" android:color="#6686C5FF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>

